# Database Configuration
POSTGRES_URL=postgresql://username:password@localhost:5432/coedit_db

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_TIMEOUT=24h
SALT_ROUNDS=10

# Email Configuration
USER_EMAIL=your_email@gmail.com
USER_PASS=your_email_password

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# API Keys
ABSTRACT_API_KEY=your_abstract_api_key

# Service Ports
API_PORT=5000
SOCKET_PORT=5001
EXECUTION_PORT=5002

# Frontend URL (for local development)
FRONTEND_URL=http://localhost:3000

# Service URLs (for local development)
API_SERVICE_URL=http://localhost:5000
SOCKET_SERVICE_URL=http://localhost:5001
EXECUTION_SERVICE_URL=http://localhost:5002

# Production URLs (uncomment and set when deploying)
# FRONTEND_URL=https://your-frontend-domain.com
